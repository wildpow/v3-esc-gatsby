{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "airbnb/hooks", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": 0,
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "usePrettierrc": false,
        "endOfLine": "lf",
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  },
  "settings": {
    "import/core-modules": [
      "gatsby",
      "prop-types",
      "dotenv",
      "@reach/router",
      "slash",
      "tailwindcss/colors",
      "@tailwindcss/typography",
     "twin.macro"
    ]
  }
}
